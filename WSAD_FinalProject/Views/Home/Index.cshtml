@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <center>
        <h1>Scheduler</h1>
        <p class="lead">Welcome to Scheduler</p>
        <p class="lead">A one stop shop to register for WWDC17 sessions.</p>
        
        <!--Give the user the option to signup if no one is logged in-->
        @if (!Request.IsAuthenticated)
        {
          <p>@Html.ActionLink("Sign Up", "Create", "Account")</p>
        }
        
        <img src="https://scontent-lga3-1.cdninstagram.com/t51.2885-15/s640x640/sh0.08/e35/c22.0.773.773/16584859_1286015311485433_4381828886392995840_n.jpg" />
    </center>
</div>


