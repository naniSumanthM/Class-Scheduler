            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" id="button" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/formScript.js")"></script>
}