@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@Html.ValidationSummary()

@if (TempData["AccountCreatedMessage"] != null)
{
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-info-sign">
            @TempData["AccountCreatedMessage"]
        </span>
    </div>
}

@if (TempData["LogoutMessage"] != null)
{
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-info-sign">
            @TempData["LogoutMessage"]
        </span>
    </div>
}


<form method="post" action="/Account/Login">
    <label class="form-label">Email Address</label>
    <input type="text" name="UserEmailAddress" class="form-control">
    <br>
    <label class="form-label">Password</label>
    <input type="password" name="UserPassword" class="form-control">
    <br>
    <input type="checkbox" value="true" name="rememberMe" /> <label>Remember Me</label> <br />
    <button type="submit" name="login" class="btn btn-success">Login</button>
    <button onclick="location.href='@Url.Action("Index", "Contact")';return false;" class="btn btn-default">Request Administrator Account</button>
</form> 